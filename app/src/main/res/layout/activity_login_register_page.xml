<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Background"
    android:id="@+id/activity_login_register_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stellago.stellago.LoginRegisterPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/able_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/action_sign_in_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLogin"
        android:focusableInTouchMode="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/action_register_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toRegister"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/toLogin"
        android:layout_alignStart="@+id/toLogin" />
</RelativeLayout>
