<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stellago.stellago.GoPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/cash_deposit"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/depositButton"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/cheque_deposit"
        android:layout_height="wrap_content"
        android:id="@+id/chequeDepositButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/depositButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/order_cheque_book"
        android:layout_height="wrap_content"
        android:id="@+id/orderChequeBookButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/chequeDepositButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/back"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/orderChequeBookButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
