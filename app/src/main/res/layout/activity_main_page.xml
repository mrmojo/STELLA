<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stellago.stellago.MainPage">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/welcome"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/AppTheme.Button"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/goButton"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/bill_master_vr"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/VRButton"
        android:layout_below="@+id/goButton"
        android:layout_alignStart="@+id/goButton" />

    <Button
        style="@style/AppTheme.Button"
        android:text="@string/logout"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/logoutButton"
        android:layout_below="@+id/VRButton"
        android:layout_alignStart="@+id/VRButton" />

</RelativeLayout>
